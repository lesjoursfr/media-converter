{
	"name": "@lesjoursfr/media-converter",
	"version": "1.0.3",
	"description": "CLI for the fluent-ffmpeg npm module.",
	"keywords": [
		"cli",
		"ffmpeg",
		"converter",
		"fluent-ffmpeg"
	],
	"author": "",
	"license": "MIT",
	"repository": "lesjoursfr/media-converter",
	"homepage": "https://github.com/lesjoursfr/media-converter#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/media-converter/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=16.15.1 || >=18.4.0"
	},
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm -r .yarn/cache/ && rm yarn.lock && yarn",
		"ljconverter": "NODE_ENV=development ts-node src/index.ts",
		"check-lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"check-format": "prettier --check .",
		"check-tsc": "tsc --noEmit",
		"lint": "eslint . --fix --ext .js,.jsx,.ts,.tsx",
		"format": "prettier --write .",
		"build": "tsc"
	},
	"bin": {
		"ljconverter": "bin/index.js"
	},
	"dependencies": {
		"fluent-ffmpeg": "^2.1.2",
		"picocolors": "^1.0.0",
		"progress": "^2.0.3",
		"yargs": "^17.6.2"
	},
	"devDependencies": {
		"@tsconfig/node16": "^1.0.3",
		"@types/fluent-ffmpeg": "^2.1.20",
		"@types/node": "^18.11.10",
		"@types/progress": "^2.0.5",
		"@types/yargs": "^17.0.15",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"prettier": "^2.8.0",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.3"
	},
	"packageManager": "yarn@3.3.0"
}
