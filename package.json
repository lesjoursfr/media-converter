{
	"name": "@lesjoursfr/media-converter",
	"version": "2.0.7",
	"description": "CLI for the fluent-ffmpeg npm module.",
	"keywords": [
		"cli",
		"ffmpeg",
		"converter",
		"fluent-ffmpeg"
	],
	"author": "",
	"license": "MIT",
	"repository": "lesjoursfr/media-converter",
	"homepage": "https://github.com/lesjoursfr/media-converter#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/media-converter/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": "20.x || 22.x"
	},
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm yarn.lock && yarn",
		"ljconverter": "NODE_ENV=development ts-node src/index.ts",
		"check-lint": "eslint",
		"check-format": "prettier --check .",
		"check-tsc": "tsc --noEmit",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"build": "tsc"
	},
	"bin": {
		"ljconverter": "bin/index.js"
	},
	"dependencies": {
		"fluent-ffmpeg": "^2.1.3",
		"picocolors": "^1.1.1",
		"progress": "^2.0.3",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@tsconfig/node20": "^20.1.4",
		"@types/fluent-ffmpeg": "^2.1.27",
		"@types/node": "^20.17.2",
		"@types/progress": "^2.0.7",
		"@types/yargs": "^17.0.33",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"globals": "^15.11.0",
		"prettier": "^3.3.3",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.12.1"
	},
	"packageManager": "yarn@4.5.1"
}
