{
	"name": "@lesjoursfr/media-converter",
	"version": "2.0.0",
	"description": "CLI for the fluent-ffmpeg npm module.",
	"keywords": [
		"cli",
		"ffmpeg",
		"converter",
		"fluent-ffmpeg"
	],
	"author": "",
	"license": "MIT",
	"repository": "lesjoursfr/media-converter",
	"homepage": "https://github.com/lesjoursfr/media-converter#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/media-converter/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": "18.x || 20.x"
	},
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm -r .yarn/cache/ && rm yarn.lock && yarn",
		"ljconverter": "NODE_ENV=development ts-node src/index.ts",
		"check-lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"check-format": "prettier --check .",
		"check-tsc": "tsc --noEmit",
		"lint": "eslint . --fix --ext .js,.jsx,.ts,.tsx",
		"format": "prettier --write .",
		"build": "tsc"
	},
	"bin": {
		"ljconverter": "bin/index.js"
	},
	"dependencies": {
		"fluent-ffmpeg": "^2.1.2",
		"picocolors": "^1.0.0",
		"progress": "^2.0.3",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@tsconfig/node18": "^18.2.0",
		"@types/fluent-ffmpeg": "^2.1.21",
		"@types/node": "^20.3.3",
		"@types/progress": "^2.0.5",
		"@types/yargs": "^17.0.24",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"eslint": "^8.44.0",
		"eslint-config-prettier": "^8.8.0",
		"prettier": "^3.0.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.6"
	},
	"packageManager": "yarn@3.6.1"
}
